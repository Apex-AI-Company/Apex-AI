      max-w-none
      -translate-x-1/2
      rotate-[30deg]
      bg-gradient-to-tr
      from-[#ff80b5]
      to-[#9089fc]
      opacity-30
      sm:left-[calc(50%-40rem)]
      sm:w-[72.1875rem];
    clip-path: polygon(
      74.1% 44.1%,
      100% 61.6%,
      97.5% 26.9%,
      85.5% 0.1%,
      80.7% 2%,
      72.5% 32.5%,
      60.2% 62.4%,
      52.4% 68.1%,
      47.5% 58.3%,
      45.2% 34.5%,
      27.5% 76.7%,
      0.1% 64.9%,
      17.9% 100%,
      27.6% 76.8%,
      76.1% 97.7%,
      74.1% 44.1%
    );
  }

  .form-field {
    @apply block;
  }

  .form-label {
    @apply flex pl-1 text-sm font-semibold leading-6 text-gray-900 mb-1;
  }

  /* Styles for text inputs and textarea */
  input[type="text"],
  input[type="email"],
  textarea {
    @apply
      pointer-events-auto
      relative
      m-0
      w-full
      cursor-text
      rounded-lg
      border-0
      bg-slate-200
      px-5
      py-2
      text-base
      font-normal
      not-italic
      outline-none
      placeholder:text-gray-400
      focus:ring-2
      focus:ring-sky-500
      focus:ring-opacity-50;
  }

  input:focus,
  textarea:focus {
    /* Focus ring is covered by Tailwindâ€™s focus:ring utilities */
  }
</style>
